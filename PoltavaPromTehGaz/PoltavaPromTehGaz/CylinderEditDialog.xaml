<Window x:Class="PoltavaPromTehGaz.CylinderEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування балона" 
        Height="826" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📦 Дані балона" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="Серійний номер:" FontWeight="Bold"/>
                <TextBox x:Name="txtSerialNumber" Height="30" Margin="0,0,0,10"/>

                <Label Content="Тип газу:" FontWeight="Bold"/>
                <ComboBox x:Name="cmbGasType" Height="30" Margin="0,0,0,10"
                          SelectedValuePath="Content">
                    <ComboBoxItem>Аргон</ComboBoxItem>
                    <ComboBoxItem>Кисень</ComboBoxItem>
                    <ComboBoxItem>Азот</ComboBoxItem>
                    <ComboBoxItem>Ацетилен</ComboBoxItem>
                    <ComboBoxItem>Гелій</ComboBoxItem>
                    <ComboBoxItem>Вуглекислота</ComboBoxItem>
                    <ComboBoxItem>Суміш Ar/CO2</ComboBoxItem>
                </ComboBox>

                <Label Content="Статус:" FontWeight="Bold"/>
                <ComboBox x:Name="cmbStatus" Height="30" Margin="0,0,0,10"/>

                <Label Content="Розташування:" FontWeight="Bold"/>
                <ComboBox x:Name="cmbLocation" Height="30" Margin="0,0,0,10"/>

                <Label Content="Дата виготовлення:" FontWeight="Bold"/>
                <DatePicker x:Name="dpManufactureDate" Height="30" Margin="0,0,0,10"/>

                <Label Content="Остання перевірка:" FontWeight="Bold"/>
                <DatePicker x:Name="dpLastCheckDate" Height="30" Margin="0,0,0,10"/>

                <Label Content="Наступна перевірка:" FontWeight="Bold"/>
                <DatePicker x:Name="dpNextCheckDate" Height="30" Margin="0,0,0,10"/>

                <Label Content="Ціна придбання (грн):" FontWeight="Bold"/>
                <TextBox x:Name="txtPurchasePrice" Height="30" Margin="0,0,0,10"/>

                <Label Content="Поточна вартість (грн):" FontWeight="Bold"/>
                <TextBox x:Name="txtCurrentValue" Height="30" Margin="0,0,0,10"/>

                <Label Content="Примітки:" FontWeight="Bold"/>
                <TextBox x:Name="txtNotes" Height="60" Margin="0,0,0,10" 
                         TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="❌ Скасувати" Width="120" Height="35" Margin="5" 
                    Click="BtnCancel_Click" Background="#E74C3C" Foreground="White"/>
            <Button Content="💾 Зберегти" Width="120" Height="35" Margin="5" 
                    Click="BtnSave_Click" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>