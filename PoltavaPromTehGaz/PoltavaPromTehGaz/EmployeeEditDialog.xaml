<Window x:Class="PoltavaPromTehGaz.EmployeeEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування працівника" 
        Height="536" Width="450"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📝 Дані працівника" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="ПІБ:" FontWeight="Bold"/>
                <TextBox x:Name="txtFullName" Height="30" Margin="0,0,0,10"/>

                <Label Content="Посада:" FontWeight="Bold"/>
                <TextBox x:Name="txtPosition" Height="30" Margin="0,0,0,10"/>

                <Label Content="Дата прийому:" FontWeight="Bold"/>
                <DatePicker x:Name="dpHireDate" Height="30" Margin="0,0,0,10"/>

                <Label Content="Зарплата (грн):" FontWeight="Bold"/>
                <TextBox x:Name="txtSalary" Height="30" Margin="0,0,0,10"/>

                <Label Content="Телефон:" FontWeight="Bold"/>
                <TextBox x:Name="txtPhone" Height="30" Margin="0,0,0,10"/>

                <Label Content="Електронна пошта:" FontWeight="Bold"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,10"/>

                <Label Content="Пароль (для доступу):" FontWeight="Bold"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="❌ Скасувати" Width="120" Height="35" Margin="5" 
                    Click="BtnCancel_Click" Background="#E74C3C" Foreground="White"/>
            <Button Content="💾 Зберегти" Width="120" Height="35" Margin="5" 
                    Click="BtnSave_Click" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>