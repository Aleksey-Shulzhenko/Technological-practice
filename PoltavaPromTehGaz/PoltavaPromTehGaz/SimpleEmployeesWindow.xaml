<Window x:Class="PoltavaPromTehGaz.SimpleEmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управління працівниками" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnAdd" Content="➕ Додати" Width="120" Height="35" 
                    Margin="0,0,5,0" Click="BtnAdd_Click" Background="#27AE60" 
                    Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnEdit" Content="✏️ Редагувати" Width="120" Height="35" 
                    Margin="5,0" Click="BtnEdit_Click" Background="#3498DB" 
                    Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnDelete" Content="🗑️ Видалити" Width="120" Height="35" 
                    Margin="5,0" Click="BtnDelete_Click" Background="#E74C3C" 
                    Foreground="White" FontWeight="Bold"/>
            <Separator Width="30" Visibility="Hidden"/>
            <TextBox x:Name="txtSearch" Width="250" Height="35" Margin="5,0" 
                     VerticalContentAlignment="Center" TextChanged="TxtSearch_TextChanged"
                     FontSize="14" Padding="5">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="Gray"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Text" Value=""/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
                Пошук за ПІБ, посадою, телефоном...
            </TextBox>
            <Button Content="🔍 Пошук" Width="100" Height="35" Margin="5,0" 
                    Click="BtnSearch_Click" Background="#9B59B6" 
                    Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnRefresh" Content="🔄 Оновити" Width="100" Height="35" Margin="5,0" 
                    Click="BtnRefresh_Click" Background="#95A5A6" 
                    Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <ListView Grid.Row="1" x:Name="EmployeesList" 
                  SelectionChanged="EmployeesList_SelectionChanged"
                  MouseDoubleClick="EmployeesList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="ПІБ" Width="200" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Посада" Width="150" DisplayMemberBinding="{Binding Position}"/>
                    <GridViewColumn Header="Дата прийому" Width="110" 
                                    DisplayMemberBinding="{Binding HireDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Зарплата" Width="110" 
                                    DisplayMemberBinding="{Binding Salary, StringFormat={}{0:N2} грн}"/>
                    <GridViewColumn Header="Телефон" Width="130" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Email" Width="180" DisplayMemberBinding="{Binding Email}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Border Grid.Row="2" Background="#F8F9FA" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" VerticalAlignment="Center" 
                               FontWeight="Bold" Foreground="#2C3E50">
                        Завантаження...
                    </TextBlock>
                    <TextBlock x:Name="SelectedCountText" VerticalAlignment="Center" 
                               Margin="20,0,0,0" Foreground="#7F8C8D">
                        Вибрано: 0
                    </TextBlock>
                    <!-- ОСЬ ЦЕГО ЕЛЕМЕНТА МАЄ БУТИ -->
                    <TextBlock x:Name="txtTotalSalary" VerticalAlignment="Center" 
                               Margin="20,0,0,0" Foreground="#27AE60" FontWeight="Bold">
                        Сума зарплат: 0.00 грн
                    </TextBlock>
                </StackPanel>
                <Button Grid.Column="1" Content="✕ Закрити" Width="120" Height="35" 
                        Click="CloseButton_Click" Background="#95A5A6" 
                        Foreground="White" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Window>