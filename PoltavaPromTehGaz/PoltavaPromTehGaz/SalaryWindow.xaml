<Window x:Class="PoltavaPromTehGaz.SalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PoltavaPromTehGaz.Converters"
        Title="💰 Розрахунок заробітної плати"
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <converters:UkrainianMonthConverter x:Key="UkrainianMonthConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="381*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ПАНЕЛЬ УПРАВЛІННЯ -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <TextBlock Text="Місяць:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="MonthPicker" Width="120" Height="30"
                       DisplayDateStart="2024-01-01" Margin="5,0"/>

            <Button Content="🔄 Розрахувати" Width="120" Height="30" Margin="10,0,5,0"
                    Click="CalculateButton_Click" Background="#27AE60"
                    Foreground="White" FontWeight="Bold"/>

            <Button Content="📋 Показати всі" Width="120" Height="30" Margin="5,0"
                    Click="ShowAllSalaries_Click" Background="#3498DB"
                    Foreground="White" FontWeight="Bold"/>

            <Button Content="📤 Експорт" Width="100" Height="30" Margin="5,0"
                    Click="ExportExcelButton_Click" Background="#F39C12"
                    Foreground="White" FontWeight="Bold"/>

            <Button Content="🖨️ Друк" Width="100" Height="30" Margin="5,0"
                    Click="PrintButton_Click" Background="#9B59B6"
                    Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <!-- ТАБЛИЦЯ ЗАРПЛАТ -->
        <DataGrid Grid.Row="1" x:Name="SalaryGrid" AutoGenerateColumns="False"
                  IsReadOnly="True" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Працівник" Width="200"
                                   Binding="{Binding Employee.FullName}"/>
                <DataGridTextColumn Header="Посада" Width="150"
                                   Binding="{Binding Employee.Position}"/>
                <DataGridTextColumn Header="Місяць" Width="100"
                                   Binding="{Binding Month, Converter={StaticResource UkrainianMonthConverter}}"/>
                <DataGridTextColumn Header="Заробітна плата" Width="120"
                                   Binding="{Binding Amount, StringFormat={}{0:N2} грн}"/>
                <DataGridTextColumn Header="Дата розрахунку" Width="120"
                                   Binding="{Binding CalculatedDate, StringFormat=dd.MM.yyyy}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- СТАТУС -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="10" Margin="0,10,0,0" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" FontWeight="Bold" FontSize="14"
                              Foreground="#2C3E50" VerticalAlignment="Center">
						Оберіть місяць для розрахунку
                    </TextBlock>

                    <TextBlock x:Name="TotalAmountText" FontWeight="Bold" FontSize="14"
                              Foreground="#27AE60" VerticalAlignment="Center"
                              Margin="20,0,0,0">
						Загальна сума: 0.00 грн
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1" Content="✕ Закрити" Width="120" Height="35"
                        Click="CloseButton_Click" Background="#95A5A6"
                        Foreground="White" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Window>